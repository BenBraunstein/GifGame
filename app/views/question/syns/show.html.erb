<h1> Synonym Question <%= @question.id %> </h1>

<%= display_prompt("syn", @question).html_safe %>

<% randomize_choices("syn", @question).each do |choice|%>

    <li><%= label_tag display_choice("syn", choice) %>
        <%= "(correct)" if choice == @question.a %>
    </li>

<% end %>


